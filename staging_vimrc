inoremap ht <ESC>

let mapleader=" "

filetype plugin indent on

syntax on

set encoding=utf-8

set clipboard=unamedplus

set spell spelllang=en_us

set number

" Set word wrap
set wrap

nnoremap <leader>f 1z=

nnoremap <leader>s :set spell!

call plug#begin('~/.vim/plugged')
